<link rel="stylesheet" href="/css/register.css">
<div class="menu">
  <a href="/users/register" class="btn btn-primary btn-ghost">Register</a>
</div>

<section class="login container">
  <h2>Login User</h2>
  <form action="/users/login" method="POST" autocomplete="off">
    <fieldset class="form-group form-success">
      <label for="phone">Email:</label>
      <input id="email" name="email" type="email" placeholder="E-mail" class="form-control"required>
    </fieldset>
    <fieldset class="form-group form-error">
      <label for="password">Password:</label>
      <input id="password" name="password" type="password" placeholder="Super Secret Password" class="form-control" required>
    </fieldset>
    <button class="btn btn-success" type="submit">Login</button>
  </form>
</section>