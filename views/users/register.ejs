<section class="register">
  <h2>Register User</h2>
  <form action="/users/register" method="POST">
    <fieldset class="form-group form-success">
      <label for="phone">Email:</label>
      <input id="email" name="email" type="email" placeholder="E-mail" class="form-control"required>
    </fieldset>
    <fieldset class="form-group form-error">
      <label for="password">Password:</label>
      <input id="password" name="password" type="password" placeholder="Super Secret Password" class="form-control" required>
    </fieldset>
    <fieldset class="form-group form-error">
      <label for="password-confirm">Password:</label>
      <input id="password-confirm" name="password-confirm" type="password" placeholder="Confirm Your Super Secret Password" class="form-control" required>
    </fieldset>
    <button class="btn btn-success" type="submit">Register</button>
  </form>
</section>